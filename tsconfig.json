{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES5",
    "experimentalDecorators": true,
    "strict": false,
    "emitDecoratorMetadata": true,
    "inlineSourceMap": true,
    "allowUnreachableCode": true,
    "noImplicitReturns": false,
    "noImplicitAny": false,
    "removeComments": false,
    "allowUnusedLabels": true,
    "allowUmdGlobalAccess": true,
    "resolveJsonModule": true,
    "inlineSources": false,
    "allowJs": true,
    "checkJs": false,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "lib": [
      "DOM",
      "ES7",
      "DOM.Iterable",
      "ES2015",
      "ESNext",
      "ES2016",
      "ES2017",
      "ES2018",
      "es2019",
      "ES2020"
    ],
    "rootDir": "./",
    "outDir": "./build",
    "noLib": false,
    "esModuleInterop": true,
    "importHelpers": true,
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
  },
  "buildOnSave": true,
  "compileOnSave": true,
  "exclude": [
    "./plugins/**/*",
    "./types/**/*",
    "./node_modules/**/*",
    "./libs/compiler/**/*"
  ],
  "include": [
    "./gulpfile.ts",
    "./src/**/*",
    "./userscripts/**/*"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true
    }
  }
}