#!/usr/bin/env bash

CWD="$PWD"
DIR="$(dirname "$(realpath "$0")")"

printf 'use git (y/n) ? '
read answer

node "$DIR/../preinstall.js"
rm -rf node_modules #package-lock.json
npm cache clean --force
# npm un static-blog-generator
if [ "$answer" != "${answer#[Yy]}" ] ;then # this grammar (the #[] operator) means that the variable $answer where any Y or y in 1st position will be dropped if they exist.
    npm install -D git+https://github.com/dimaslanjaka/static-blog-generator.git#dev
else
    npm install -D https://github.com/dimaslanjaka/static-blog-generator/raw/dev/release/development.tgz
fi


