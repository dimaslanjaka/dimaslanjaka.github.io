{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "lib": [
      "ES2021",
      "ES2021.String"
    ]
  },
  "exclude": [
    "**/node_modules/**",
    "**/tests/**"
  ],
  "include": [
    "./src/**/*"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "esModuleInterop": true,
      "moduleResolution": "Node",
    }
  }
}