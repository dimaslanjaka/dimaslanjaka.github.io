{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "outDir": "./dist/lib",
        "esModuleInterop": true,
        "downlevelIteration": true,
        "declaration": true,
        "baseUrl": "src",
        "allowJs": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "sourceMap": true
    },
    "include": [
        "src/index.ts"
    ],
    "exclude": [
        "src/*.backup.ts"
    ]
}