{
  "compilerOptions": {
    "rootDir": "./src/",
    "sourceRoot": "./src/",
    "outDir": "./build",
    "module": "CommonJS",
    "target": "ES5",
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": false,
    "inlineSourceMap": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": true,
    "noImplicitReturns": false,
    "noImplicitAny": false,
    "removeComments": false,
    "allowUnusedLabels": true,
    "allowUmdGlobalAccess": true,
    "resolveJsonModule": true,
    "inlineSources": false,
    "allowJs": true,
    "checkJs": false,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "noLib": false,
    "esModuleInterop": true,
    "importHelpers": true,
    "lib": [
      "ES2020",
      "DOM",
      "ES6"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "src/types"
    ],
    "types": [
      "node"
    ]
  },
  "exclude": [
    //"./types/**/*",
    "./node_modules/**/*",
    "./libs/compiler/**/*"
  ],
  "include": [
    "./src/**/*"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "esModuleInterop": true,
      "moduleResolution": "Node",
    }
  }
}