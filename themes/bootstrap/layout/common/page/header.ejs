<!-- Post header-->
<header class="mb-4">
  <!-- Post title-->
  <h1 class="fw-bolder mb-1"><%- page.title %></h1>
  <!-- Post meta content-->
  <div class="text-muted fst-italic mb-2">Posted on <%- date_format(page.date, 'L') %> by <%- author_name(page) %></div>
  <!-- Post categories-->
  <% page.categories.forEach(cat => { %>
  <a class="badge bg-secondary text-decoration-none link-light" href="/<% config.category_dir %>/<%- cat %>"><%- cat %></a>
  <% }) %>
</header>