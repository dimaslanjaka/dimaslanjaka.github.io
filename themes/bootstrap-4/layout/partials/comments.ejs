<% if (theme.comments.enable) { %>
    <% if (theme.comments.type === 'utteranc') { %>
        <script src="https://utteranc.es/client.js"
                repo="<%= theme.comments_repo %>"
                issue-term="url"
                theme="<%= theme.comments_theme %>"
                crossorigin="anonymous"
                async>
        </script>
    <% } else if (theme.comments.type === 'disqus') { %>
        <div id="disqus_thread"></div>
        <script>
            /**
             *  RECOMMENDED CONFIGURATION VARIABLES: EDIT AND UNCOMMENT
             *  THE SECTION BELOW TO INSERT DYNAMIC VALUES FROM YOUR
             *  PLATFORM OR CMS.
             *
             *  LEARN WHY DEFINING THESE VARIABLES IS IMPORTANT:
             *  https://disqus.com/admin/universalcode/#configuration-variables
             */
            const disqus_config = function () {
                let PAGE_URL = location.protocol + '//' + location.host + location.pathname;
                console.log(PAGE_URL);
                this.page.url = PAGE_URL;

                // Replace PAGE_IDENTIFIER with your page's unique identifier variable
                //this.page.identifier = PAGE_IDENTIFIER;
            };

            (function() {  // REQUIRED CONFIGURATION VARIABLE: EDIT THE SHORTNAME BELOW
                const d = document, s = d.createElement('script');

                // IMPORTANT: Replace EXAMPLE with your forum shortname!
                s.src = 'https://<% theme.comments.disqus.shortname %>>.disqus.com/embed.js';

                s.setAttribute('data-timestamp', +new Date());
                (d.head || d.body).appendChild(s);
            })();
        </script>
        <noscript>
            Please enable JavaScript to view the
            <a href="https://disqus.com/?ref_noscript" rel="nofollow noopener noreferer">
                comments powered by Disqus.
            </a>
        </noscript>
    <% } %>
<% } %>
