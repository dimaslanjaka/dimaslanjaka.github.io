{
  "$schema": "https://raw.githubusercontent.com/SchemaStore/schemastore/master/src/schemas/json/nodemon.json",
  "restartable": "rs",
  "ignore": [
    ".git",
    "*.test.js",
    ".gitignore",
    ".vscode",
    "__tests__/*",
    "**/node_modules/**",
    "docs"
  ],
  "verbose": true,
  "exec": "gulp",
  "execMap": {
    "js": "node --harmony",
    "ts": "node -r ts-node/register"
  },
  "watch": [
    "./src-posts/",
    "./gulpfile.ts",
    "./template/",
    "./src/"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "ts,ejs,md,js"
}