  "version": "0.2.0",
  "configurations": [
    {
      "command": "ts-node src/generator.ts",
      "name": "Generate",
      "request": "launch",
      "type": "node-terminal",
      "env": {
        "NODE_ENV": "development"
      },
      "cwd": "${workspaceFolder}"
    },
    {
      "command": "gulp",
      "name": "gulp default",
      "request": "launch",
      "type": "node-terminal",
      "env": {
        "NODE_ENV": "development"
      },
      "outFiles": [
        "${workspaceFolder}/**/*.js",
        "!**/node_modules/**"
      ],
      "pauseForSourceMap": false,
      "cwd": "${workspaceFolder}"
    },
    {
      "command": "gulp generate:article",
      "name": "gulp gen:article",
      "request": "launch",
      "type": "node-terminal",
      "env": {
        "NODE_ENV": "development"
      },
      "cwd": "${workspaceFolder}"
    },
    {
      "command": "php -S localhost:4000 -t docs",
      "name": "PHP SERVER",
      "request": "launch",
      "type": "node-terminal"
    }
  ]
}