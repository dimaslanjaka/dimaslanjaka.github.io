<div class="jumbotron" id="post-top">
    <h1><%- page.title %></h1>
    <h4 class="text-muted"><%- page.subtitle %></h4>
    <p class="date">
        <%= date(page.date, config.date_format) %>
        <button id="show-post-info-btn" class="btn btn-primary btn-md" data-toggle="modal" data-target="#page-info-modal">Post details</button>
    </p>
</div>

<hr>

<%- page.content %>
<%- partial("partials/modal.ejs") %>

<div class="post--info">
    <%- partial("partials/post_tags.ejs") %>
    <%- partial("partials/post_categories.ejs") %>
</div>

<div class="post-comments">
    <%- partial("partials/comments.ejs") %>
</div>

<hr>