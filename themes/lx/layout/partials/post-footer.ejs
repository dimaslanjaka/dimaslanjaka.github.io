<div class="lx-navigation">
	<div class="lx-cover prev lx-cover-sm" style="background-image: url(<%- url_for(theme.nex_post)%>)">
		<div class="overlay"></div>
		<a class="copy" href="<%if (page.prev) {%><%= url_for(page.prev.path)%><%} else {%>#<%}%>">
			<div class="display-t">
				<div class="display-tc">
					<div>
						<span>Next</span>
						<h3><%if (page.prev) {%><%- truncate(page.prev.title , {length: 10}) %><%} else {%><%= __('postfooter.no_newer')%><%}%></h3>
					</div>
				</div>
			</div>
		</a>
	</div>
        <div class="lx-cover next lx-cover-sm" style="background-image: url(<%- url_for(theme.pre_post)%>)">
		<div class="overlay"></div>
		<a class="copy" href="<%if (page.next) {%><%= url_for(page.next.path)%><%} else{%>#<%}%>">
			<div class="display-t">
				<div class="display-tc">
					<div>
						<span>Prev</span>
						<h3><%if (page.next) {%><%- truncate(page.next.title , {length: 10}) %><%} else{%><%= __('postfooter.no_older')%><%}%></h3>
					</div>
				</div>
			</div>
		</a>
	</div>
</div>
