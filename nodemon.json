{
  "$schema": "https://raw.githubusercontent.com/SchemaStore/schemastore/master/src/schemas/json/nodemon.json",
  "restartable": "rs",
  "ignore": [
    ".git",
    "**/node_modules/**",
    "docs"
  ],
  "verbose": true,
  "exec": "gulp",
  "execMap": {
    "js": "node --harmony",
    "ts": "node -r ts-node/register"
  },
  "events": {
    "restart": "gulp"
  },
  "watch": [
    "src-posts/",
    "gulpfile.ts",
    "source/_posts",
    "template/"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "ts,ejs,md"
}