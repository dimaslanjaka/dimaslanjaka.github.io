<footer id="footer">
    <div class="container">
        <div class="container-inner">
            <a id="back-to-top" href="javascript:;"><i class="icon fa fa-angle-up"></i></a>
            <div class="credit">
                <h1 class="logo-wrap">
                    <a href="<%- url_for() %>" class="logo"></a>
                </h1>
                <p>&copy; <%= date(new Date(), 'YYYY') %>
                    <%= get_author_name(page, config) || config.title %>
                </p>
                <% if (theme.poweredby) { %>
                <p>Powered by <a href="https://hexo.io/" rel="nofollow noopener" target="_blank">Hexo</a>. Theme by <a
                        href="https://github.com/ppoffice" rel="nofollow noopener" target="_blank">PPOffice</a></p>
                <% } %>
            </div>
            <div class="footer-plugins">
                <%- partial('plugin/scripts', { isFooter: true }) %>
            </div>
        </div>
    </div>
</footer>