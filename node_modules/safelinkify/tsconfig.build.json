{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": "./",
    "target": "es5",
    "outDir": "./dist",
    "emitDeclarationOnly": false,
    "declaration": true,
    "declarationDir": "dist",
    "allowJs": true,
    "checkJs": false,
    "lib": [
      "es2020",
      "DOM"
    ],
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "./src/**/*",
    "src/**/*.json"
  ],
  "exclude": [
    "*.test.*",
    "**/test/**",
    "**/*.test.ts",
    "**/*.runner.ts"
  ]
}