{
  "compilerOptions": {
    "outDir": "./tmp/dist",
    "allowJs": true,
    "checkJs": false,
    "lib": [
      "es2020",
      "DOM"
    ],
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types", "./typings"]
  },
  "include": [
    "./src/**/*",
    "./src-docs/**/*",
    "./test/**/*",
    "./*.json",
    "./*.js"
  ],
  "exclude": [
    "**/dist/**",
    "**/node_modules/**"
  ]
}