<!-- Post header-->
<header class="mb-4">
  <!-- Post title-->
  <h1 class="fw-bolder mb-1"><%- page.title %></h1>
  <!-- Post meta content-->
  <div class="text-muted fst-italic mb-2">Posted on <%- date_format(page.date, 'LLL') %> by <%- author_name(page)||author_name(config) %>
  </div>
  <% if (page.type == 'post') { %>
  <!-- Post categories-->
  <% [...tags(page), ...categories(page)].forEach((label) => { %>
  <a class="badge bg-secondary text-decoration-none link-light" href="<%- label.path %>"><%- label.name %></a>
  <% }) %>
  <% } %>
</header>
