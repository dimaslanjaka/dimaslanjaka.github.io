{
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./build",
    "module": "ES2020",
    "target": "ES2020",
    "moduleResolution": "Node",
    //"experimentalDecorators": true,
    //"emitDecoratorMetadata": true,
    "strict": false,
    "inlineSourceMap": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": true,
    "noImplicitReturns": false,
    "noImplicitAny": false,
    "removeComments": false,
    "allowUnusedLabels": true,
    "allowUmdGlobalAccess": true,
    "resolveJsonModule": true,
    "inlineSources": false,
    "allowJs": true,
    "checkJs": false,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "lib": [
      "ES2020",
      "DOM"
    ],
    "noLib": false,
    "esModuleInterop": true,
    "importHelpers": true,
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "types": [
      "node"
    ]
  },
  "buildOnSave": true,
  "compileOnSave": true,
  "exclude": [
    "./types/**/*",
    "./node_modules/**/*",
    "./libs/compiler/**/*"
  ],
  "include": [
    "./gulpfile.ts",
    "./src/**/*"
  ],
  "ts-node": {
    "esm": true,
    "compilerOptions": {
      "module": "ES2020",
      "esModuleInterop": true,
      "moduleResolution": "Node",
    }
  }
}